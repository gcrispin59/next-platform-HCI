        <input type="date" id="dob" name="dob" required>
        <br>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>
        <br>
        <label for="cityStateZip">City/State/Zip:</label>
        <input type="text" id="cityStateZip" name="cityStateZip" required>
        <br>
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" required>
        <br>
        <label for="email">E-mail:</label>
        <input type="email" id="email" name="email">

        <h2>Fiscal Management Service Assistance Requested</h2>
        <input type="checkbox" id="payrollServices" name="service" value="payroll">
        <label for="payrollServices">Payroll Services (CODE 501/Personal Assistant)</label>
        <br>
        <input type="checkbox" id="vendorPayments" name="service" value="vendor">
        <label for="vendorPayments">Vendor Payments for Community Goods/Services</label>

        <br><br>
        <button type="submit">Submit Referral</button>
    </form>

    <script>
        document.getElementById('referralForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Collect form data
            const formData = {
                participantName: document.getElementById('participantName').value,
                dob: document.getElementById('dob').value,
                address: document.getElementById('address').value,
                cityStateZip: document.getElementById('cityStateZip').value,
                phone: document.getElementById('phone').value,
                email: document.getElementById('email').value,
                // Add other fields...
                servicesRequested: {
                    payroll: document.getElementById('payrollServices').checked,
                    vendor: document.getElementById('vendorPayments').checked
                }
            };

            // Here, you would send `formData` to your backend API
            console.log('Form Data to be sent:', formData);
            alert('Form submitted! Check the console for the data.');
        });
    </script>
