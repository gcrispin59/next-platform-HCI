# HCI-Forms Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Claude AI Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# NC ARMS Integration
ARMS_API_ENDPOINT=https://arms.nc.gov/api
ARMS_API_KEY=your_arms_api_key_here
ARMS_CERT_PATH=/path/to/arms/certificate.pem
ARMS_EMAIL_RECIPIENT=arms-submissions@nc.gov

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hci_forms
DB_USER=hci_user
DB_PASSWORD=your_db_password_here

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_TEMPLATE_ARMS=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_NOTIFICATION=d-yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy
ADMIN_EMAIL=admin@your-domain.com

# FMS Integration (Gusto)
GUSTO_API_KEY=your_gusto_api_key_here
GUSTO_API_ENDPOINT=https://api.gusto.com/v1
GUSTO_WEBHOOK_SECRET=your_gusto_webhook_secret_here

# Transaction Fee Configuration
TRANSACTION_FEE_PERCENT=2.5
SETUP_FEE=25.00
MONTHLY_MINIMUM=50.00

# Security Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# Netlify Configuration (automatically set in production)
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_AUTH_TOKEN=your_netlify_auth_token

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here